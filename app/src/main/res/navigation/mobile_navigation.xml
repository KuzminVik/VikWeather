    <fragment
        android:id="@+id/navigation_search"
        android:name="ru.geekbrains.myweather.presentation.search.SearchFragment"
        android:label="@string/navigation_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="ru.geekbrains.myweather.presentation.settings.SettingsFragment"
        android:label="@string/navigation_settings"
        tools:layout="@layout/fragment_settings" />
