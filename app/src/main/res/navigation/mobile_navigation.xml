    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_current">

    <fragment
        android:id="@+id/navigation_current"
        android:name="ru.geekbrains.myweather.presentation.currentweather.CurrentWeatherFragment"
        android:label="@string/navigation_current"
